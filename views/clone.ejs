                newCircle.fillColor = "#b81c93";
            }
            else if(event.key === 'y'){
                sound25.play();
                newCircle.fillColor = "#c75752";
            }
            else if(event.key === 'z'){
                sound26.play();
                newCircle.fillColor = "#7d7543";
            }else{
                newCircle.fillColor = "black";
            }
            circles.push(newCircle);
        }
    
    
    function onFrame(event){
        for(var i = 0 ; i<circles.length ; i++ ){
            circles[i].fillColor.hue += 1;
            circles[i].scale(0.9);
    
