            }
            else if(event.key === 't'){
                sound20.play();
                newCircle.fillColor = "#0c4f13";
            }
            else if(event.key === 'u'){
                sound21.play();
                newCircle.fillColor = "#37bfbb";
            }
            else if(event.key === 'v'){
                sound22.play();
                newCircle.fillColor = "#7d76e3";
            }
            else if(event.key === 'w'){
